<h1>Welcome to the letter game</h1>

<div class="letters-board">
    <% @letter_array.each do |l| %>
        <div class="letter">
            <%= l %>
        </div>
    <% end %>
</div>

<%= form_tag("/games", method: "post") do %>
    <%= label_tag(:word) %>
    <%= text_field_tag(:word) %>
    <%= submit_tag("Submit") %>
<% end %>